// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "toolbar": {
    "code_actions": true
  },
  "agent_ui_font_size": 14.0,
  "agent": {
    "default_profile": "minimal",
    "default_model": {
      "provider": "Regolo.AI",
      "model": "qwen3-coder-30b"
    },
    "model_parameters": []
  },
  "language_models": {
    "openai_compatible": {
      "Regolo.AI": {
        "api_url": "https://api.regolo.ai",
        "available_models": [
          {
            "name": "qwen3-coder-30b",
            "max_tokens": 200000,
            "max_output_tokens": 32000,
            "max_completion_tokens": 200000,
            "capabilities": {
              "tools": true,
              "images": false,
              "parallel_tool_calls": false,
              "prompt_cache_key": false
            }
          }
        ]
      }
    }
  },
  "icon_theme": "Catppuccin Macchiato",
  "ui_font_size": 14.0,
  "terminal": {
    "detect_venv": {
      "on": {
        "directories": [".env", "env", ".venv", "venv"],
        "activate_script": "default"
      }
    }
  },
  "auto_install_extensions": {
    "LOG": true,
    "Python": true,
    "SCSS": true,
    "XML": true
  },
  "notification_panel": {
    "button": false,
    "dock": "left"
  },
  "chat_panel": {
    "dock": "left"
  },
  "outline_panel": {
    "dock": "left"
  },
  "project_panel": {
    "dock": "right"
  },
  "lsp_highlight_debounce": 100,
  "soft_wrap": "editor_width",
  "tabs": {
    "git_status": true,
    "file_icons": true
  },
  "tab_bar": {
    "show_nav_history_buttons": false
  },
  "show_whitespaces": "selection",
  "inlay_hints": {
    "scroll_debounce_ms": 250,
    "enabled": true,
    "show_parameter_hints": true
  },
  "debugger": {
    "stepping_granularity": "line",
    "save_breakpoints": true,
    "dock": "bottom",
    "button": false
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "buffer_font_size": 12.0,
  "theme": {
    "mode": "system",
    "light": "JetBrains New Dark",
    "dark": "One Dark"
  },
  "scrollbar": {
    "diagnostics": "information"
  },
  "languages": {
    "PHP": {
      "language_servers": ["phptools"]
    },
    "Django": {
      "language_servers": [
        "django-language-server",
        "django-template-lsp",
        "..."
      ]
    },
    "Python": {
      "language_servers": ["basedpyright", "ruff", "!pyright"],
      "format_on_save": "on",
      "formatter": [
        {
          "code_action": "source.organizeImports.ruff"
        },
        {
          "code_action": "source.fixAll.ruff"
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "file_types": {
    "Django": ["**/templates/**/*.html"]
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/out",
    "**/dist",
    "**/.vscode-test",
    "**/.vscode",
    "**/.next",
    "**/.nyc_output",
    "**/report",
    "**/node_modules"
  ],
  "collaboration_panel": {
    "button": false
  },
  "ui_font_family": "JetBrains Mono",
  "buffer_font_family": "JetBrains Mono",
  "base_keymap": "JetBrains",
  "lsp": {
    "basedpyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "basic",
          "useLibraryCodeForTypes": true,
          "reportMissingTypeStubs": true,
          "reportOptionalMemberAccess": true,
          "reportCallIssue": true
        },
        "python": {
          "pythonPath": ".venv/bin/python"
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "configurationPreference": "filesystemFirst",
          "codeAction": {
            "disableRuleComment": { "enable": false },
            "fixViolation": { "enable": true }
          },
          "fixAll": true,
          "organizeImports": true,
          "showSyntaxErrors": true,
          "format": {
            "preview": true
          }
        }
      }
    }
  }
}
